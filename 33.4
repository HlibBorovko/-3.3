package com.example.multiactivityapp

import android.os.Bundle
import androidx.activity.enableEdgeToEdge
import androidx.appcompat.app.AppCompatActivity
import androidx.core.view.ViewCompat
import androidx.core.view.WindowInsetsCompat
import android.widget.TextView

class SecondActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_second)

        val textViewInfo = findViewById<TextView>(R.id.textViewInfo)

        // Отримання даних з Intent
        val type = intent.getStringExtra("type")

        // Виведення різної інформації в залежності від типу
        when (type) {
            "author" -> {
                val name = intent.getStringExtra("name")
                textViewInfo.text = "Автор додатка: $name"
            }
            "faculty" -> {
                val faculty = intent.getStringExtra("faculty")
                textViewInfo.text = "Факультет: $faculty"
            }
            "city" -> {
                val city = intent.getStringExtra("city")
                textViewInfo.text = "Місто: $city"
            }
        }
    }
}
