<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть ваше ім'я"/>

        <EditText
            android:id="@+id/editTextFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть ваш факультет"/>

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть ваше місто"/>

        <Button
            android:id="@+id/buttonAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Відомості про автора"/>

        <Button
            android:id="@+id/buttonFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Відомості про факультет"/>

        <Button
            android:id="@+id/buttonCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Відомості про місто"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
